<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
        <property name="hibernate.temp.use_jdbc_metadata_defaults">false</property>
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.username">${DB_CALSNS_USER}</property>
        <property name="hibernate.connection.password">${DB_CALSNS_PASSWORD}</property>
        <property name="hibernate.connection.url">${DB_CALSNS_JDBC_URL}</property>
        <!--<property name="hibernate.connection.autocommit">true</property>-->
        <property name="hibernate.default_schema">calsns</property>
        <property name="connection_pool_size">10</property>
        <property name="show_sql">true</property>
    </session-factory>
</hibernate-configuration>
